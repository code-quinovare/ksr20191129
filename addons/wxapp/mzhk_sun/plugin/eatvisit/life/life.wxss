.container {
    padding-bottom: 120rpx;
    height: auto;
}

.banner {
    width: 750rpx;
    height: 230rpx;
}

.order-nav {
    height: 80rpx;
    display: flex;
    align-items: center;
    background: #fff;
    justify-content: space-around;
}

.order-nav view {
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    color: #999;
    font-size: 30rpx;
}

.order-nav .on {
    border-bottom: 4rpx solid #f33030;
    color: #f33030;
}

.order-nav text {
    padding: 0rpx 30rpx;
}

.list {
    display: flex;
    margin: 20rpx 20rpx 0;
    padding: 20rpx;
    width: 670rpx;
    background: #fef3e0;
    border-radius: 10rpx;
}

.left {
    flex: 0 0 240rpx;
    position: relative;
    width: 240rpx;
    height: 200rpx;
    margin-right: 20rpx;
}

.left>image {
    width: 240rpx;
    height: 200rpx;
}

.left>text {
    display: inline-block;
    position: absolute;
    left: 0rpx;
    top: 0;
    width: 120rpx;
    height: 38rpx;
    line-height: 38rpx;
    background: rgba(245,172,50,1);
    font-size: 24rpx;
    color: #fff;
    text-align: center;
    border-radius: 0 0 19rpx 0;
}

.left .over {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    background-color: rgba(0,0,0,0.5);
}

.left .over image {
    width: 180rpx;
    height: 150rpx;
    margin-left: 30rpx;
    margin-top: 25rpx;
}

.list-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 200rpx;
}

.list-right>view {
    width: 410rpx;
}

.title {
    width: 100%;
    overflow: hidden;
    line-height: 32rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 30rpx;
    font-weight: 700;
}

.desc {
    display: -webkit-box!important;
    margin-top: 20rpx;
    line-height: 36rpx;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.price {
    color: #fe433f;
    font-weight: 700;
    font-size: 38rpx;
}

.old-price {
    margin-left: 30rpx;
    color: #666666;
    font-size: 30rpx;
    text-decoration: line-through;
}
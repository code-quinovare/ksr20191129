.container {
    background-color: #FFF;
}

.wrap {
    margin: 0 20rpx;
}

.head {
    margin-top: 50rpx;
    margin-bottom: 55rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    font-weight: 700;
    letter-spacing: 4rpx;
}

.head .icon {
    width: 34rpx;
    height: 34rpx;
    margin-right: 20rpx;
}

.block {
    margin-top: 15rpx;
    margin-bottom: 30rpx;
}

.step {
    font-size: 30rpx;
    font-weight: 700;
}

.detail {
    margin-top: 30rpx;
    color: #666666;
    line-height: 32rpx;
}

.canvas-img {
    margin-bottom: 15rpx;
    height: 1000rpx;
    width: 710rpx;
}

.canvas {
    position: absolute;
    transform: translateX(-200%);
}
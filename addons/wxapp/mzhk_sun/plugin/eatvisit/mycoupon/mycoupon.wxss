.order-nav {
    height: 80rpx;
    display: flex;
    align-items: center;
    background: #fff;
    justify-content: space-around;
}

.order-nav view {
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    color: #666;
    font-size: 30rpx;
}

.order-nav .on {
    border-bottom: 4rpx solid #f33030;
    color: #f33030;
}

.order-nav text {
    padding: 0rpx 10rpx;
}

.session {
    padding-bottom: 166rpx;
}

.list {
    padding: 20rpx;
    margin-top: 20rpx;
    width: 710rpx;
    background-color: #fff;
}

.list-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    width: 100%;
    height: 40rpx;
    font-size: 26rpx;
}

.order-num {
    padding: 0 20rpx;
    height: 30rpx;
    line-height: 30rpx;
    border: 1rpx solid rgb(245,172,50);
    border-radius: 15rpx;
    text-align: center;
    font-weight: 700;
    color: #f5ac32;
    font-size: 28rpx;
}

.list-cont {
    display: flex;
    width: 710rpx;
}

.list-pic {
    flex: 0 0 200rpx;
    height: 200rpx;
    width: 200rpx;
    margin-right: 60rpx;
}

.list-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-top: 10rpx;
    height: 190rpx;
}

.list-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}

.level {
    font-size: 32rpx;
    color: #f5ac32;
    font-weight: 700;
}

.level>image {
    margin-right: 20rpx;
    vertical-align: middle;
    height: 32rpx;
    width: 25rpx;
}

.use {
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #fff;
    font-size: 26rpx;
    font-weight: 700;
    letter-spacing: 2rpx;
    background-image: -webkit-linear-gradient(0deg,rgb(255,128,68) 0%,rgb(254,67,63) 100%);
    border-radius: 30rpx;
}

.prize {
    font-weight: 700;
}

.shop {
    font-size: 26rpx;
}

.shop>text {
    color: #666;
}
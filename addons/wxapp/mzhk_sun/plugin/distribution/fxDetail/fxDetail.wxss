.order-nav {
    height: 80rpx;
    display: flex;
    align-items: center;
    background: #fff;
    justify-content: space-around;
}

.order-nav view {
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    color: #666;
    font-size: 30rpx;
}

.order-nav .on {
    border-bottom: 4rpx solid #f5ac32;
    color: #f5ac32;
}

.order-nav text {
    padding: 0rpx 10rpx;
}

.session {
    margin-top: 20rpx;
}

.list {
    padding-left: 30rpx;
    margin-bottom: 20rpx;
    background: #fff;
}

.state {
    height: 60rpx;
    padding-right: 30rpx;
    line-height: 60rpx;
    border-bottom: 1rpx solid #ececec;
    color: #666;
}

.audite {
    color: #f5ac32;
}

.pay {
    color: #f33030;
}

.content {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 30rpx 20rpx 0;
}

.title {
    font-size: 32rpx;
    line-height: 32rpx;
}

.times {
    margin-top: 20rpx;
    color: #666;
    font-size: 26rpx;
}

.money {
    color: #f5ac32;
    font-weight: 700;
    font-size: 34rpx;
}
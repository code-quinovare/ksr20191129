.order-nav {
    height: 80rpx;
    display: flex;
    align-items: center;
    background: #fff;
    justify-content: space-around;
}

.order-nav view {
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    color: #666;
    font-size: 30rpx;
}

.order-nav .on {
    border-bottom: 4rpx solid #f5ac32;
    color: #f5ac32;
}

.order-nav text {
    padding: 0rpx 10rpx;
}

.session {
    margin-top: 30rpx;
    padding: 0rpx 25rpx;
}

.list {
    display: inline-block;
    margin-bottom: 30rpx;
    padding-bottom: 10rpx;
    width: 335rpx;
    background: #fff;
}

.list:nth-child(2n) {
    margin-left: 30rpx;
}

.img {
    position: relative;
}

.img>image {
    width: 335rpx;
    height: 190rpx;
}

.order-type {
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    height: 40rpx;
    width: 120rpx;
    line-height: 40rpx;
    background: #f33030;
    text-align: center;
    font-size: 24rpx;
    color: #fff;
    border-radius: 0 20rpx 20rpx 0rpx;
}

.det {
    padding: 10rpx;
}

.name {
    line-height: 36rpx;
    width: 315rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.price {
    font-size: 30rpx;
    margin-top: 16rpx;
    color: #f5ac32;
    font-weight: 700;
}

.toFx {
    margin-top: 20rpx;
    width: 315rpx;
    height: 58rpx;
    line-height: 58rpx;
    background: #f5ac32;
    color: #fff;
    border-radius: 10rpx;
    text-align: center;
}
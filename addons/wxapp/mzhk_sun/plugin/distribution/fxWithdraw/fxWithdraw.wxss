.wrap {
    padding: 20rpx 30rpx;
    background: #fff;
}

.curMoney {
    font-size: 40rpx;
    line-height: 40rpx;
    margin-bottom: 20rpx;
}

.lastMoney {
    color: #666;
    line-height: 30rpx;
    font-size: 24rpx;
}

.lastMoney text {
    color: #f5ac32;
    font-size: 28rpx;
    font-weight: 700;
}

.lastMoney>view {
    margin-bottom: 10rpx;
}

.cash {
    background: #FFF;
    padding: 30rpx 30rpx;
    color: #666;
    margin-top: 20rpx;
}

.enterMoney {
    display: flex;
    align-items: center;
    font-size: 48rpx;
    font-weight: 700;
    margin: 40rpx 0rpx 30rpx;
    color: #222;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #ececec;
}

.cashAll {
    display: flex;
    justify-content: space-between;
}

.cashAll>text:last-child {
    display: inline-block;
    color: #f5ac32;
}

.submit {
    margin-top: 60rpx;
    padding: 0rpx 30rpx;
    margin-bottom: 50rpx;
}

.submit text {
    display: inline-block;
    color: #f5ac32;
}

.submit button {
    margin-top: 30rpx;
    background: #f5ac32;
    color: #fff;
    font-size: 32rpx;
    width: 600rpx;
}

.choose {
    margin-top: 20rpx;
    background: #fff;
}

.picker {
    padding-right: 30rpx;
    height: 88rpx;
    margin-left: 30rpx;
    width: 690rpx;
    line-height: 88rpx;
}

.right {
    margin-left: 16rpx;
}

.session {
    background: #fff;
    padding-left: 30rpx;
}

.list>view {
    padding: 10rpx 30rpx 10rpx 0rpx;
    border-top: 1rpx solid #ececec;
}

.list input {
    height: 68rpx;
}

.mask {
    background: rgba(0,0,0,0.5);
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    bottom: 0rpx;
    right: 0rpx;
    z-index: 1000;
}

.ruleTitle {
    color: #f33030;
    font-weight: 700;
    font-size: 32rpx;
    text-align: center;
    margin-bottom: 20rpx;
    line-height: 38rpx;
}

.rule {
    background: #fff;
    border-radius: 16rpx;
    width: 550rpx;
    padding: 30rpx;
    position: absolute;
    z-index: 1001;
    top: 40%;
    left: 50%;
    transform: translate(-50%,-70%);
}

.rule>rich-text {
    line-height: 42rpx;
    color: #666;
}

.icon {
    width: 60rpx;
    height: 60rpx;
    margin-right: 16rpx;
}

.pay {
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx 30rpx;
}

.pay>view {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 210rpx;
    height: 90rpx;
    margin-right: 30rpx;
    margin-bottom: 20rpx;
    box-sizing: border-box;
    border-radius: 4rpx;
    border: 1rpx solid #dcdcdc;
}

.pay>view.active {
    border: 1rpx solid #f5ac32;
}

.pay>view:nth-child(3n) {
    margin-right: 0rpx;
}
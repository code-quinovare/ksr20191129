.order-nav {
    height: 80rpx;
    display: flex;
    align-items: center;
    background: #fff;
    justify-content: space-around;
}

.order-nav view {
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    color: #666;
    font-size: 30rpx;
}

.order-nav .on {
    border-bottom: 4rpx solid #f5ac32;
    color: #f5ac32;
}

.order-nav text {
    padding: 0rpx 10rpx;
}

.list {
    display: flex;
    padding: 30rpx 30rpx;
    background: #fff;
    border-bottom: 1px solid #ececec;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
    border-radius: 50%;
}

.list-left {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 80rpx;
    padding: 10rpx 0;
}

.down {
    display: flex;
    width: 570rpx;
    justify-content: space-between;
    font-size: 26rpx;
    color: #666;
}

.down>view:last-child {
    color: #f5ac32;
    font-weight: 700;
    font-size: 30rpx;
}
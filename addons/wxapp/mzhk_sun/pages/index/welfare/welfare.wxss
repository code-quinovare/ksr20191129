swiper {
    height: 404rpx;
}

.slide-image {
    width: 750rpx;
    height: 404rpx;
}

.block {
    background: #fff;
    padding: 22rpx 0rpx 0rpx 30rpx;
    border-bottom: 1rpx solid #cbcbcb;
}

.block-up {
    border-bottom: 1rpx solid #ececec;
    display: flex;
    flex-direction: column;
    color: #666;
    font-size: 26rpx;
    padding-bottom: 34rpx;
}

.title {
    line-height: 42rpx;
    font-size: 36rpx;
    font-weight: 700;
    color: #222;
    margin-bottom: 26rpx;
}

.addrIcons {
    width: 30rpx;
    height: 32rpx;
    margin-right: 20rpx;
}

.addrIcon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 20rpx;
}

.block-down {
    display: flex;
    justify-content: space-between;
    padding-right: 30rpx;
    align-items: center;
    height: 120rpx;
    color: #222;
}

.addr {
    display: flex;
    align-items: center;
}

.phone {
    width: 42rpx;
    height: 42rpx;
}

.session-title {
    display: flex;
    align-items: center;
    font-size: 32rpx;
    justify-content: center;
    padding: 60rpx 0rpx 34rpx;
}

.session {
    background: #fff;
    margin-top: 20rpx;
    margin-bottom: 150rpx;
}

.session-title image {
    margin-right: 20rpx;
}

.details image {
    width: 100%;
}

.navFix {
    display: flex;
    justify-content: center;
    height: 98rpx;
    width: 750rpx;
    position: fixed;
    bottom: 0rpx;
    background: #edd087;
    line-height: 98rpx;
    text-align: center;
    color: #fff;
    font-size: 34rpx;
    background-image: -webkit-linear-gradient(270deg,rgb(237,208,135)0%,rgb(235,174,113)100%);
}

.navFix view {
    height: 98rpx;
    width: 750rpx;
}

.bname {
    padding-bottom: 15rpx;
    display: flex;
    align-items: center;
}

.index {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 200rpx;
    right: 50rpx;
    z-index: 999;
    box-shadow: 0px 0px 18px 0px rgba(4,0,0,0.2);
    background: rgba(255,255,255,0.9);
}

.indexHome {
    width: 68rpx;
    height: 68rpx;
    border-radius: 50%;
}
.searchWrap {
    background-color: #efefef;
    height: 80rpx;
    justify-content: center;
    padding-top: 20rpx;
}

.searchBox {
    width: 92%;
    height: 60rpx;
    background-color: #fff;
    margin: 0 30rpx;
    border-radius: 20rpx;
    font-size: 30rpx;
    justify-content: center;
    display: flex;
    align-items: center;
}

.searchBox icon {
    margin: 0 10rpx;
}

.searchBox input {
    flex: 1 1 auto;
}

.bannerImgs {
    width: 690rpx;
    margin: 20rpx 30rpx 50rpx;
    height: 300rpx;
    border-radius: 10rpx;
}

.jxList {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.jxImgs {
    width: 320rpx;
    height: 180rpx;
    border-radius: 10rpx;
}

.jxItem {
    margin-bottom: 50rpx;
}

.jxBox {
    font-size: 30rpx;
    padding: 0 30rpx;
}

.jxTitle {
    font-weight: bold;
    margin-bottom: 30rpx;
}
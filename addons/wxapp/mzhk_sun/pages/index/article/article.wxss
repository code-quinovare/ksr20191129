@import "../../wxParse/wxParse.wxss";

.container {
    border-top: 1rpx solid #ECECEC;
}

.shop {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60rpx;
    padding: 15rpx 20rpx;
    background: #fff;
}

.shopimg {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.shopName {
    width: 480rpx;
    line-height: 32rpx;
    font-weight: 700;
}

.shopDet {
    display: flex;
    align-items: center;
}

.right {
    width: 12rpx;
    height: 21rpx;
    margin-left: 16rpx;
}

.shopHome {
    color: #ef8200;
    font-size: 24rpx;
}

.cont {
    background: #fff;
    margin-top: 10rpx;
    padding: 30rpx 20rpx 60rpx;
}

.title {
    text-align: center;
    line-height: 38rpx;
    font-size: 32rpx;
}

.time {
    text-align: center;
    font-size: 24rpx;
    color: #999;
    line-height: 60rpx;
}

.icn {
    width: 42rpx;
    height: 30rpx;
    margin-right: 4rpx;
}

.watch {
    display: flex;
    justify-content: center;
}

.watch>view {
    display: flex;
    align-items: center;
}

.watchNum {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #666;
    margin-left: 20rpx;
}

.arcBody {
    margin-top: 20rpx;
    line-height: 42rpx;
    color: #333;
    width: 710rpx;
}

.arcBody image {
    width: 100%;
    display: block;
    margin: 10rpx 0;
}

.btnGroup {
    display: flex;
    justify-content: space-around;
}

.clickGood {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    font-size: 26rpx;
    color: #666;
    position: relative;
}

.clickGood>view:first-child {
    background: #ddd;
    width: 88rpx;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    margin-bottom: 10rpx;
}

.clickGood>view.isgood {
    background: #ef8200;
}

.clickGood button {
    margin-left: 0rpx;
    margin-right: 0rpx;
    padding-left: 0rpx;
    padding-right: 0rpx;
    border-radius: 50%;
    background: #ddd;
    width: 88rpx;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.goodIcon {
    width: 60rpx;
    height: 60rpx;
}

.goodIcn {
    position: absolute;
    top: 0rpx;
    left: 48%;
    width: 36rpx;
    height: 36rpx;
    opacity: 0;
}

.isActive {
    width: 36rpx;
    transform: translateY(0);
    animation: mymove 1s 1;
    animation-fill-mode: forwards;
}

@keyframes mymove {
    0% {
        transform: translateY(0);
        opacity: 1;
    }

    100% {
        transform: translateY(-100rpx);
        opacity: 0;
    }
}

.video {
    width: 710rpx;
    height: 480rpx;
}

.share {
    width: 750rpx;
    height: 98rpx;
    background: rgb(40,183,163);
    box-shadow: 0rpx -3rpx 3rpx 0rpx rgba(180,180,180,0.078);
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    display: flex;
    justify-content: space-between;
}

.share button {
    background: #ef8200;
    color: #fff;
    font-size: 32rpx;
    width: 375rpx;
    border-radius: 0rpx;
    line-height: 98rpx;
}

.share button::after {
    border: none;
}

.share .arcShare {
    background: #f23030;
}

.goods {
    display: flex;
    width: 600rpx;
    margin-left: 35rpx;
    margin-top: 40rpx;
    padding: 20rpx;
    background: #f8f8f8;
}

.goodsImg>image {
    width: 180rpx;
    height: 102rpx;
}

.goodsDet {
    margin-left: 20rpx;
    width: 420rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.goodsTitle {
    width: 420rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    align-items: center;
    font-size: 32rpx;
    line-height: 40rpx;
    height: 50rpx;
}

.goodsTitle>image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
    margin-top: 5rpx;
}

.isVip {
    border-radius: 6rpx;
    border: 1rpx solid #ef8200;
    font-size: 22rpx;
    padding: 5rpx 0rpx;
    width: 160rpx;
    text-align: center;
}

.toBuy {
    width: 120rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 6rpx;
    border: 1rpx solid #ef8200;
    text-align: center;
    font-size: 26rpx;
    color: #ef8200;
}
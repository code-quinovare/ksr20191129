@import "../../wxParse/wxParse.wxss";

swiper {
    height: 525rpx;
}

.slide-image {
    width: 750rpx;
    height: 525rpx;
}

.wrap {
    border-bottom: 1rpx solid #cbcbcb;
    background: #fff;
}

.wrap_up {
    margin-left: 30rpx;
    padding-right: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 130rpx;
    overflow: hidden;
}

.wrap_down {
    color: #666;
    padding: 0rpx 30rpx;
    width: 690rpx;
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    justify-content: space-between;
}

.wrap_down text {
    color: #ff7d04;
}

.wrap_time {
    color: #222;
}

.wrap_up:first-child {
    border-bottom: 1rpx solid #ececec;
}

.title {
    font-size: 34rpx;
    font-weight: 700;
    line-height: 46rpx;
    width: 580rpx;
}

.title>text {
    display: inline-block;
    font-weight: 500;
    color: #fff;
    background: #ba8fff;
    font-size: 24rpx;
    padding: 0rpx 10rpx;
    border-radius: 3rpx;
    margin-right: 5rpx;
}

.share {
    margin-left: 0rpx;
    margin-right: 0rpx;
    padding-left: 0rpx;
    padding-right: 0rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background: #f2f2f2;
    color: #999;
    line-height: 28rpx;
}

.share::after {
    border: none;
}

.share image {
    width: 30rpx;
    height: 30rpx;
}

.price {
    display: inline-block;
    position: relative;
}

.price>text {
    color: #999;
}

.price::after {
    content: " ";
    display: inline-block;
    height: 2rpx;
    width: 100%;
    background: #999;
    position: absolute;
    top: 48rpx;
    left: 0rpx;
    transform: rotate(2deg);
}

.process {
    display: flex;
    flex-direction: row;
    padding: 30rpx 20rpx;
    margin-top: 20rpx;
    align-items: cneter;
    background: #fff;
}

.pro {
    width: 194rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #222;
}

.proimg {
    width: 56rpx;
    height: 56rpx;
    margin-bottom: 16rpx;
}

.arrow {
    width: 56rpx;
    height: 16rpx;
    margin-top: 8rpx;
}

.order-nav {
    margin-top: 20rpx;
    height: 84rpx;
    display: flex;
    align-items: center;
    background: #fff;
    justify-content: space-around;
}

.order-nav view {
    height: 100%;
    text-align: center;
    line-height: 84rpx;
    box-sizing: border-box;
    color: #f33030;
    font-size: 32rpx;
}

.session {
    padding: 20rpx 0rpx 150rpx;
}

.goods-det {
    padding: 20rpx;
    background: #fff;
    word-break: break-all;
}

.goods-det view {
    line-height: 45rpx;
}

.mIcon {
    font-size: 32rpx;
}

.gusPrice {
    font-size: 42rpx;
}

.old {
    margin-top: 4rpx;
    color: #666;
}

.old::before {
    background: #666;
}

.navFix {
    display: flex;
    justify-content: space-between;
    height: 98rpx;
    width: 750rpx;
    position: fixed;
    bottom: 0rpx;
    background: #ffe7e3;
}

.navFix .tobuy {
    width: 632rpx;
    height: 98rpx;
    background-image: -webkit-linear-gradient(0deg,rgb(255,134,0)0%,rgb(255,105,14)100%);
    line-height: 98rpx;
    color: #fff;
    text-align: center;
    font-size: 30rpx;
}

.navFix .over {
    background-image: -webkit-linear-gradient(0deg,rgb(202,202,202)0%,rgb(154,154,154)100%);
}

.navFix .toIndex {
    height: 98rpx;
    width: 118rpx;
    background: #fff;
    color: #999;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    line-height: 26rpx;
}

.toIndex image {
    width: 60rpx;
    height: 60rpx;
}

.navFix .toGroup {
    color: #fff;
    background: #ff4422;
}

.shop {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60rpx;
    padding: 15rpx 30rpx;
    background: #fff;
}

.shopimg {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.shopName {
    width: 380rpx;
    line-height: 32rpx;
    font-weight: 700;
}

.shopDet {
    display: flex;
    align-items: center;
}

.right {
    width: 12rpx;
    height: 21rpx;
    margin-left: 16rpx;
}

.shopHome {
    color: #ef8200;
    font-size: 24rpx;
}

.activetime {
    padding: 0rpx 30rpx;
    background: #fff;
}

.activetime>view {
    padding: 15rpx 0rpx;
    border-top: 1rpx solid #ececec;
}

.winning {
    display: flex;
    flex-direction: column;
    background: #FFF;
    padding: 20rpx 30rpx 0rpx 50rpx;
}

.winning>view {
    height: 60rpx;
    padding: 10rpx 0rpx;
    display: flex;
    align-items: center;
}

.uthumb {
    height: 60rpx;
    width: 60rpx;
    border-radius: 50%;
    margin-right: 16rpx;
}

.opentime {
    position: relative;
}

.opentime>view {
    position: absolute;
    top: -60rpx;
    background: rgba(0,0,0,0.7);
    height: 60rpx;
    color: #fff;
    line-height: 60rpx;
    text-align: center;
    width: 750rpx;
}

.process_wg {
    display: flex;
    flex-direction: row;
    padding: 30rpx 20rpx;
    margin-top: 20rpx;
    align-items: cneter;
    background: #fff;
}

.pro_wg {
    display: flex;
}

.pro_wg .pro_wg_logo {
    margin-right: 20rpx;
}

.pro_wg .pro_wg_logo,.pro_wg .pro_wg_add {
    width: 80rpx;
    height: 80rpx;
}

.pro_wg .pro_wg_title {
    width: 535rpx;
    line-height: 37rpx;
    overflow: hidden;
}

.pro_wg .pro_wg_title view {
    height: 37rpx;
    overflow: hidden;
}

.pro_wg .pro_wg_title view:nth-child(2) {
    color: #bbb;
}

.codemask {
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    right: 0rpx;
    bottom: 0rpx;
    background: rgba(0,0,0,0.5);
    z-index: 1000;
    height: 100%;
}

.code {
    position: absolute;
    top: 35%;
    left: 50%;
    transform: translate(-50%);
    z-index: 1001;
    background: #fff;
    width: 500rpx;
    min-height: 250rpx;
    padding-bottom: 30rpx;
    border-radius: 10rpx;
    color: #ef8200;
}

.codetitle {
    text-align: center;
    padding: 56rpx 0 30rpx;
}

.codecontent {
    padding: 0 20rpx;
    text-align: center;
    line-height: 35rpx;
}

.qrcode {
    text-align: center;
    margin-top: 50rpx;
    margin-bottom: 20rpx;
}

.qrcode button {
    background: #ef8200;
    color: #fff;
    text-align: center;
    padding: 0rpx 15rpx;
    width: 175rpx;
    height: 50rpx;
    line-height: 48rpx;
    font-size: 30rpx;
}

.preview {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.7);
    position: fixed;
    z-index: 1001;
    top: 0rpx;
}

.preview image {
    width: 80%;
    position: absolute;
    top: 10%;
    left: 10%;
    z-index: 9999;
}

.preview button {
    width: 40%;
    position: absolute;
    bottom: 100rpx;
    left: 30%;
    z-index: 9999;
}

.canvas {
    position: absolute;
    top: -3000rpx;
}

.shareBtn {
    position: absolute;
    top: 100rpx;
    right: 30rpx;
    z-index: 1001;
    width: 60rpx;
    height: 60rpx;
    background: rgba(0,0,0,0.7);
    border-radius: 50%;
    color: #fff;
    font-size: 22rpx;
    display: flex;
    align-items: center;
    padding: 20rpx;
    justify-content: center;
    text-align: center;
    line-height: 34rpx;
}

.shareBtn>text {
    display: inline-block;
}
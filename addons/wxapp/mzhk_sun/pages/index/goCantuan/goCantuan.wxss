page {
    background-color: #f2f2f2;
}

.container {
    width: 750rpx;
}

.header {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    margin-top: 20rpx;
}

.topMes {
    width: 690rpx;
    padding: 0rpx 30rpx;
    height: 170rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 26rpx;
    color: #999;
    border-bottom: 1rpx solid #eee;
}

.left-mes {
    display: flex;
}

.goodsImg {
    width: 130rpx;
    height: 130rpx;
}

.goodstext {
    margin-left: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.goodsName {
    font-size: 30rpx;
    color: #000;
}

.originPrice {
    color: #999;
    text-decoration: line-through;
}

.pinPrice {
    color: #999;
}

.pin-price {
    color: #ce0000;
    font-size: 28rpx;
    margin-left: 20rpx;
}

.bottom-mes {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.icon-row {
    margin-top: 40rpx;
    display: flex;
    flex-direction: row;
    position: relative;
}

.headerImg {
    width: 70rpx;
    height: 70rpx;
    border-radius: 100%;
    margin-left: 20rpx;
}

.tuanzhang {
    width: 40rpx;
    height: 20rpx;
    border-radius: 2rpx;
    background-color: #ffb825;
    color: #fff;
    font-size: 16rpx;
    text-align: center;
    line-height: 20rpx;
    position: absolute;
    left: 50rpx;
    top: -10rpx;
}

.remainTimes {
    font-size: 28rpx;
    color: #000;
    margin-top: 20rpx;
}

.remain-num {
    color: #ce0000;
    font-size: 28rpx;
}

.nowPin-btn {
    width: 600rpx;
    height: 90rpx;
    border-radius: 10rpx;
    background-color: #ce0000;
    color: #fff;
    text-align: center;
    line-height: 90rpx;
    margin: 20rpx 0rpx 30rpx 0rpx;
}

button {
    border: none;
}

.introduce {
    width: 100%;
    min-height: 205rpx;
    margin-top: 20rpx;
    background-color: #fff;
    display: flex;
    flex-direction: column;
}

.rule-contents {
    color: #666;
    font-size: 26rpx;
    margin-left: 30rpx;
    margin: 23rpx 30rpx 20rpx 30rpx;
    line-height: 40rpx;
}

.kanjia-title {
    width: 120rpx;
    margin-left: 30rpx;
    margin-top: 10rpx;
    color: #ce0000;
    font-size: 30rpx;
    border-bottom: 1rpx solid #ce0000;
}

.like-title {
    width: 100%;
    height: 70rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.like-icon {
    width: 30rpx;
    height: 30rpx;
}

.like-text {
    color: #ce0000;
    font-size: 30rpx;
    margin-left: 20rpx;
}

.favourite-list {
    width: 100%;
    min-height: 390rpx;
    background-color: #fff;
    display: flex;
    flex-wrap: wrap;
}

.goods-wrap {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.goods-item {
    width: 210rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-left: 31rpx;
    margin-top: 30rpx;
}

.favourite-goods {
    width: 210rpx;
    height: 180rpx;
    display: flex;
}

.goodsName {
    color: #000;
    font-size: 26rpx;
    margin: 10rpx 0rpx;
}

.goodsPrice {
    color: #ce0000;
    font-size: 30rpx;
}

.liucheng-wrap {
    width: 100%;
    background-color: #fff;
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
}

.kanjia-title {
    width: 120rpx;
    margin-left: 30rpx;
    margin-top: 10rpx;
    color: #ce0000;
    font-size: 30rpx;
    border-bottom: 1rpx solid #ce0000;
}

.contents {
    padding: 30rpx;
}

.liucheng {
    display: flex;
    align-items: center;
    width: 680rpx;
    justify-content: space-between;
    margin-left: 35rpx;
    margin-top: 23rpx;
}

.item-liu {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 140rpx;
    text-align: center;
}

.liucheng-text {
    color: #666;
    font-size: 26rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.kanjiaImgs {
    width: 90rpx;
    height: 90rpx;
    display: flex;
}

.arrow {
    width: 40rpx;
    height: 10rpx;
}

.details-wrap {
    margin-top: 20rpx;
    width: 100%;
    background-color: #fff;
    margin-bottom: 120rpx;
}

.detailsImgs {
    width: 690rpx;
    margin-left: 30rpx;
    margin-top: 23rpx;
    display: flex;
}

.more {
    width: 70rpx;
    height: 70rpx;
    margin-left: 20rpx;
    border-radius: 100%;
    background-color: #f2f2f2;
    line-height: 45rpx;
    text-align: center;
    color: #999;
}

.show-popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 4;
}

.popup-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 5;
}

.popup-contents {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background-color: #fff;
    z-index: 6;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.pop-goods-info {
    width: 710rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 1px solid #eee;
}

.pop-img-box {
    width: 230rpx;
    height: 230rpx;
    margin: 30rpx 30rpx 30rpx 0rpx;
}

.pop-img-box .goods-thumbnail {
    width: 230rpx;
    height: 230rpx;
}

.pop-goods-title {
    width: 410rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-size: 30rpx;
    color: #000;
}

.pop-goods-price {
    font-size: 30rpx;
    color: #ce0000;
    margin-top: 5rpx;
}

.pop-goods-num {
    color: #999;
    font-size: 26rpx;
    margin-top: 5rpx;
}

.pop-goods-close {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.closeImg {
    width: 30rpx;
    height: 30rpx;
}

.size-label-box {
    width: 710rpx;
    color: #000;
    font-size: 28rpx;
}

.size-label-box .label {
    font-size: 26rpx;
    color: #000;
    margin: 20rpx 0rpx;
}

.size-label-box .label-item-box {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.size-label-box .label-item {
    color: #666;
    background-color: #f3f3f3;
    padding: 14rpx 20rpx;
    height: 40rpx;
    margin-bottom: 10rpx;
    border-radius: 20rpx;
    text-align: center;
    line-height: 40rpx;
    margin-right: 20rpx;
}

.size-label-box .label-item.active {
    color: #fff;
    background-color: #ce0000;
}

.buy-num-box {
    width: 710rpx;
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0rpx 40rpx 0;
    border-top: 1px solid #eee;
    margin-top: 20rpx;
    align-items: center;
}

.num-label {
    font-size: 28rpx;
    color: #000;
}

.buy-num-box .num-box {
    display: flex;
}

.buy-num-box .num-box .num-jian,.buy-num-box .num-box .num-input,.buy-num-box .num-box .num-jia {
    width: 80rpx;
    height: 64rpx;
    line-height: 62rpx;
    text-align: center;
    border: 1px solid #eee;
}

.buy-num-box .num-box .num-input {
    font-size: 28rpx;
    margin: 0rpx 5rpx;
}

.buy-num-box .num-box .num-input input {
    height: 100%;
}

.popup-join-btn {
    width: 600rpx;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    font-size: 32rpx;
    color: #fff;
    background-color: #ffb825;
    border-radius: 10rpx;
    margin-bottom: 30rpx;
}

.buy-join-btn {
    width: 600rpx;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    font-size: 32rpx;
    color: #fff;
    background-color: #ce0000;
    border-radius: 10rpx;
    margin-bottom: 30rpx;
}

.buy-num-box .num-box .hui {
    background-color: #f5f5f9;
}

.index {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 200rpx;
    right: 50rpx;
    z-index: 999;
    box-shadow: 0px 0px 18px 0px rgba(4,0,0,0.2);
    background: rgba(255,255,255,0.9);
}

.indexHome {
    width: 68rpx;
    height: 68rpx;
    border-radius: 50%;
}
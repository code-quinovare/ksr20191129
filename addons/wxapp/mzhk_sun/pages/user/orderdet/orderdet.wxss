.list {
    background: #fff;
    margin-top: 20rpx;
    font-size: 28rpx;
}

.order-num {
    display: flex;
    font-size: 28rpx;
    justify-content: space-between;
    align-items: center;
    height: 82rpx;
    padding: 0rpx 20rpx;
    border-bottom: 1rpx solid #ececec;
    color: #666;
}

.order-num view:last-child {
    color: #222;
}

.list-up {
    display: flex;
    align-items: center;
    padding: 20rpx 0rpx;
    border-bottom: 1rpx solid #ececec;
}

.list-left {
    display: flex;
    padding-left: 20rpx;
}

.list-right {
    padding-right: 20rpx;
}

.left-det {
    width: 460rpx;
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    color: #666;
    font-size: 26rpx;
    position: relative;
}

.price {
    font-size: 30rpx;
    position: absolute;
    bottom: 0rpx;
    line-height: 36rpx;
}

.curPrice {
    color: #222;
    margin-right: 14rpx;
}

.oldPrice {
    display: inline-block;
    position: relative;
    color: #999;
    font-size: 24rpx;
}

.oldPrice::before {
    content: " ";
    height: 2rpx;
    width: 100%;
    position: absolute;
    top: 16rpx;
    left: 0rpx;
    background: #999;
    transform: rotate(2deg);
}

.left-title {
    color: #222;
    font-size: 28rpx;
    line-height: 44rpx;
    margin-bottom: 20rpx;
    font-weight: 700;
}

.img {
    height: 180rpx;
    width: 180rpx;
}

.list-down {
    height: 100rpx;
    background-color: #fff;
    display: flex;
    justify-content: flex-end;
    padding: 0rpx 20rpx;
    align-items: center;
}

.order {
    padding: 20rpx;
    color: #999;
    line-height: 46rpx;
    background: #fff;
    margin-top: 20rpx;
    font-size: 26rpx;
}

.qrcode {
    margin: 50rpx auto;
    width: 420rpx;
    text-align: center;
}

.qrcode>canvas {
    width: 420rpx;
    height: 420rpx;
    margin-top: 20rpx;
}

.orderStu {
    color: #f33030;
}

.order .btn {
    width: 78rpx;
    height: 33rpx;
    font-size: 26rpx;
    color: #222;
    text-align: center;
    line-height: 31rpx;
    justify-content: center;
    border: 1rpx solid #999;
    margin-left: 14rpx;
    border-radius: 10rpx;
}

.order .submit {
    color: #fff;
    border: 1rpx solid #f33030;
    background: #f33030;
}
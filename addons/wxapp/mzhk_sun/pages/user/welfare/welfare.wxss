.order-nav {
    height: 80rpx;
    display: flex;
    align-items: center;
    background: #fff;
    justify-content: space-around;
}

.order-nav view {
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    color: #666;
    font-size: 30rpx;
}

.order-nav .on {
    border-bottom: 4rpx solid #f33030;
    color: #f33030;
}

.order-nav text {
    padding: 0rpx 10rpx;
}

.list {
    background: #fff;
    margin-top: 20rpx;
    font-size: 28rpx;
}

.order-num {
    display: flex;
    font-size: 28rpx;
    justify-content: space-between;
    align-items: center;
    height: 82rpx;
    padding: 0rpx 20rpx;
    border-bottom: 1rpx solid #ececec;
    color: #666;
}

.order-num view:last-child {
    color: #222;
}

.list-up {
    display: flex;
    align-items: center;
    padding: 20rpx 0rpx;
    border-bottom: 1rpx solid #ececec;
}

.list-left {
    display: flex;
    padding-left: 20rpx;
}

.list-right {
    padding-right: 20rpx;
}

.left-det {
    width: 510rpx;
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    color: #666;
    font-size: 26rpx;
    position: relative;
}

.left-title {
    color: #222;
    font-size: 28rpx;
    line-height: 44rpx;
    margin-bottom: 20rpx;
    font-weight: 700;
}

.off {
    width: 176rpx;
    height: 60rpx;
    background: #f33030;
    color: #fff;
    text-align: center;
    line-height: 60rpx;
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
    border-radius: 12rpx;
}

.img {
    height: 180rpx;
    width: 180rpx;
}

.list-down {
    height: 100rpx;
    background-color: #fff;
    display: flex;
    justify-content: flex-end;
    padding: 0rpx 20rpx;
    align-items: center;
}

.list-down .btn {
    width: 150rpx;
    height: 56rpx;
    font-size: 26rpx;
    color: #222;
    text-align: center;
    line-height: 56rpx;
    justify-content: center;
    border: 1rpx solid #999;
    margin-left: 14rpx;
    border-radius: 10rpx;
}

.list-down .submit {
    color: #f33030;
    border: 1rpx solid #f33030;
}

.order-num .orderStu {
    color: #f33030;
}

.no {
    margin-top: 200rpx;
    height: 270rpx;
    width: 750rpx;
}

.mask {
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    right: 0rpx;
    bottom: 0rpx;
    background: rgba(0,0,0,0.5);
    z-index: 1;
}

.qrcode {
    width: 420rpx;
    z-index: 1001;
    background: #fff;
    position: absolute;
    top: 20%;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    padding: 30rpx 20rpx;
    border-radius: 16rpx;
    color: #666;
}

.qrcode>text {
    display: block;
    height: 30rpx;
    font-size: 28rpx;
    color: #222;
}

.qrcode>canvas {
    width: 420rpx;
    height: 420rpx;
    margin-top: 20rpx;
}
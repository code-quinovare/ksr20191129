.session {
    padding: 0rpx 20rpx;
    background: #fff;
}

.list {
    min-height: 90rpx;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #ececec;
    color: #222;
}

.lst {
    padding-top: 30rpx;
    border-bottom: 1px solid #ececec;
}

.list-name {
    width: 176rpx;
}

.list-name-box {
    padding-bottom: 15rpx;
}

.list-name-box input {
    padding: 10rpx 0;
}

.list-name-text {
    padding-top: 10rpx;
    color: #DEA681;
}

.btn-group {
    padding: 37rpx;
}

.btn {
    width: 676rpx;
    height: 92rpx;
    font-size: 34rpx;
    border-radius: 10rpx;
    background: #f9f9f9;
}

.submit {
    color: #fff;
    background-color: #f33030;
    margin-bottom: 30rpx;
}

.money {
    line-height: 80rpx;
    text-align: center;
    padding-right: 30rpx;
    height: 80rpx;
    background: #fff;
}

.money text {
    color: #f33030;
    font-weight: 700;
}

.openTime {
    display: flex;
    align-items: center;
}

.openTime>view {
    margin: 0rpx 10rpx;
}

.chooseOpenTime {
    width: 180rpx;
    text-align: center;
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.drawer_box {
    width: 750rpx;
    overflow: hidden;
    position: fixed;
    bottom: 0rpx;
    left: 0;
    z-index: 1001;
    background: #fff;
}

.drawer_title {
    font-size: 32rpx;
    color: #222;
    padding: 24rpx 20rpx;
    display: flex;
    justify-content: space-between;
}

.cancel {
    width: 30rpx;
    height: 30rpx;
}

.drawer_content {
    height: 300rpx;
    overflow-y: scroll;
    padding-top: 30rpx;
}

.RZprice {
    height: 88rpx;
    text-align: center;
}

.RZprice text:last-child {
    color: #f33030;
    margin-left: 20rpx;
    font-weight: 700;
}

.picture {
    padding: 20rpx 20rpx 10rpx 0rpx;
    display: flex;
    flex-wrap: wrap;
}

.upload {
    border: 1px solid #ececec;
    width: 160rpx;
    height: 160rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    color: #999;
    margin-right: 19rpx;
    margin-bottom: 20rpx;
}

.upload:nth-child(4n) {
    margin-right: 0rpx;
}

.icon {
    width: 74rpx;
    height: 62rpx;
    margin-bottom: 14rpx;
}

.uploadPic {
    width: 160rpx;
    height: 160rpx;
}

.listSpec {
    height: auto;
    padding: 30rpx 0rpx;
    border-bottom: 1rpx solid #ececec;
}

.specIcon {
    width: 30rpx;
    height: 30rpx;
    margin-right: 6rpx;
}

.shopSpec {
    display: flex;
    flex-wrap: wrap;
}

.shopSpec>view {
    margin-top: 20rpx;
    margin-left: 20rpx;
    display: flex;
    align-items: center;
    color: #999;
}

.choose {
    color: #f33030;
    font-weight: 700;
}
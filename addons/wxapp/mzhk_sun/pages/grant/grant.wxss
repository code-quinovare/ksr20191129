page {
    background: #fff;
}

.shop {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    padding-bottom: 50rpx;
    font-weight: 700;
}

.shopLogo {
    height: 120rpx;
    width: 120rpx;
    border-radius: 50%;
    margin-top: 80rpx;
    margin-bottom: 30rpx;
}

.block {
    border-top: 1rpx solid #ececec;
    width: 670rpx;
    margin: 0rpx 40rpx;
    padding-top: 50rpx;
    font-size: 32rpx;
}

.receive {
    color: #999;
    font-size: 28rpx;
    margin-top: 30rpx;
}

.btn {
    margin-top: 50rpx;
}

.btn>button {
    background: #fff;
    margin-bottom: 30rpx;
    font-size: 32rpx;
    height: 90rpx;
    line-height: 90rpx;
    width: 670rpx;
}

.btn>button.submit {
    background: #1aa91d;
    color: #fff;
}
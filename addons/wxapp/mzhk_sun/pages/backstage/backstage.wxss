.backstage {
    min-height: 100%;
    background-image: -webkit-linear-gradient(-20deg,rgb(83,92,173)0%,rgb(249,44,83)100%);
}

.wrap {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.logo {
    width: 160rpx;
    height: 160rpx;
    margin-top: 192rpx;
    margin-bottom: 30rpx;
}

.hklogo {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}

.pretend {
    color: #fff;
    background: rgba(255,255,255,0.3);
    line-height: 50rpx;
    text-align: center;
    font-size: 34rpx;
    border-radius: 20rpx;
}

.session {
    margin-top: 30rpx;
    background: rgba(255,255,255,0.36);
    border-radius: 12rpx;
}

.session input {
    display: flex;
    overflow: hidden;
    text-align: left;
    width: 540rpx;
    height: 88rpx;
    line-height: 88rpx;
    color: #fff;
    font-size: 28rpx;
    padding-left: 40rpx;
}

.session-login {
    background: rgba(255,255,255,0);
    border: 3rpx solid rgba(255,255,255,0.6);
}

.login {
    background: transparent;
    font-size: 28rpx;
    color: #fff;
}
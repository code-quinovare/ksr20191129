.tab {
    position: fixed;
    width: 100%;
    bottom: 0rpx;
    background: #fff;
    border-top: 2rpx solid #acacac;
    height: 92rpx;
    padding-bottom: 4rpx;
}

.tabnav {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.tablist {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    color: #8c8c8c;
}

.active {
    color: #28b7a3;
}

.tabimg {
    width: 60rpx;
    height: 60rpx;
    margin-top: 8rpx;
    margin-bottom: 0rpx;
}

.session {
    display: flex;
    align-items: center;
    height: 144rpx;
    border-top: 1px solid #ececec;
    border-bottom: 1px solid #ececec;
    padding: 0rpx 30rpx;
}

.msg {
    height: 88rpx;
    width: 91rpx;
    border-radius: 20rpx;
}

.session-cont {
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: 28rpx;
    color: #999;
    line-height: 50rpx;
    margin-left: 24rpx;
}

.session-cont text:first-child {
    color: #222;
    font-size: 32rpx;
}
@import "ranking.wxss";

.put_forward>view {
    width: 33.33%;
    box-sizing: border-box;
    text-align: center;
}

.put_forward>view:nth-child(1) {
    border-right: 2rpx solid #e5e5e5;
}

.put_forward>view view:nth-child(2) {
    padding: 10rpx 0 0 0;
}

.list image:nth-child(1) {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.list image:nth-child(3) {
    width: 20rpx;
    height: 30rpx;
    right: 20rpx;
}

.head image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    vertical-align: middle;
}

.tixian {
    height: 60rpx;
    line-height: 60rpx;
    padding: 0rpx 30rpx;
    border: 2rpx solid #e5e5e5;
    border-radius: 15rpx;
    right: 20rpx;
}

.mine {
    width: 160rpx;
    height: 60rpx;
    right: -20rpx;
    text-align: center;
    line-height: 60rpx;
}

.mine>text {
    display: block;
    width: 100%;
    height: 100%;
    top: 0;
}

.mine>text:nth-child(1) {
    z-index: 10;
    background: #000;
    opacity: .3;
    border-bottom-left-radius: 40rpx;
    border-top-left-radius: 40rpx;
}

.mine>text:nth-child(2) {
    z-index: 20;
}

.fxmxy {
    width: 70%;
    left: 50%;
    top: 20%;
    position: fixed;
    transform: translate(-50%,0);
    background: #fff;
    border-radius: 10px;
    z-index: 999;
}

.fxmxyhd {
    text-align: center;
    font-size: 30rpx;
    background: #34aaff;
    height: 100rpx;
    line-height: 100rpx;
    color: white;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}

.fxmxyhd2 {
    text-align: center;
    font-size: 30rpx;
    background: #34aaff;
    height: 100rpx;
    line-height: 100rpx;
    color: white;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
}

.fxmxybd {
    font-size: 28rpx;
    padding: 50rpx 50rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
}

.fxmxybd image {
    width: 400rpx;
    height: 400rpx;
}

.zhezhao {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.6);
    z-index: 998;
}
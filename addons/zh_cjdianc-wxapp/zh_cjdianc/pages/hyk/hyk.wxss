    border: 1rpx solid #FFD39B;
    background: #fff;
    border-radius: 50%;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.zszkimg image {
    width: 120rpx;
    height: 120rpx;
}

.zssm {

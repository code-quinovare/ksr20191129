    font-size: 26rpx;
    height: 180rpx;
}

.zszk1 image {
    width: 100%;
    height: 100%;
}

.zkleft {
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 300rpx;
    padding: 10rpx 30rpx;
    color: #FFD39B;
    transform: skew(-20deg);
    background: #333;
    height: 140rpx;
}

.zkleft image {
    width: 40rpx;
    height: 40rpx;
}

.zkleft>view {
    transform: skew(20deg);
}

.zkleft>image {

.blbanner {
    padding: 10rpx 20rpx;
}

.ddlb {
    display: flex;
    flex-direction: row;
    background: #fff;
    padding: 10rpx 0;
}

.ddlb>view {
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.tjlb,.wmlb {
    border-top: 1rpx solid #f4f4f4;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-around;
    margin-bottom: 30rpx;
    background: #fff;
}

.tjlb>view {
    background: #fff;
    flex: 1;
    padding: 0rpx;
    margin: 20rpx 0;
    display: flex;
    border-right: 1rpx solid #d9d9d9;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
}

.image {
    width: 40rpx;
    height: 40rpx;
}

.num {
    font-size: 35rpx;
}

.text {
    font-size: 26rpx;
    color: #999;
}